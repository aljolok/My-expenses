rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data within their specific user path.
    // The 'appId' is a global variable provided by the Canvas environment for isolation.
    // The 'userId' is the authenticated user's unique ID.
    match /artifacts/{appId}/users/{userId}/{collectionName}/{documentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

